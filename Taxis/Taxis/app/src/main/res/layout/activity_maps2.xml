<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000000">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:background="#000000"
        android:layout_marginTop="518dp"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/busumit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:id="@+id/ttxview1"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linearLayout2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:hint="Entrer d'abord num tel puis Cliquez  sur votre position en suite sur la destination"
            android:textSize="18dp" />
    </LinearLayout>

    <Button
        android:id="@+id/busumit"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"


        android:layout_alignParentTop="true"
        android:background="@drawable/button"
        android:onClick="buclick3"
        android:text="calc tarif" />

    <Button
        android:id="@+id/button4"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_toEndOf="@+id/busumit"
        android:layout_toRightOf="@+id/busumit"
        android:background="@drawable/button"
        android:onClick="Changer"
        android:text="supp" />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"

        android:layout_toEndOf="@+id/button4"
        android:layout_toRightOf="@+id/button4"

android:textColorHint="#000000"
        android:ems="10"
        android:hint="entrer num tel"
        android:inputType="phone" />


</RelativeLayout>